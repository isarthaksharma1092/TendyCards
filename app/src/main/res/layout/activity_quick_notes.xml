<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4D5D5"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    tools:context=".QuickNotes">
    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default User"
        android:textSize="30sp"
        android:layout_marginStart="10dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_marginVertical="15dp"
        android:layout_height="match_parent">


    <!-- Card 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"


        app:layout_constraintTop_toTopOf="@id/layout2"
        app:layout_constraintBottom_toTopOf="@+id/card3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/android_card1"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/card1Trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:layout_marginStart="10dp"

            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/edu_tas_beginner"
            android:textSize="25sp"
            />

    </androidx.cardview.widget.CardView>

    <!-- Card 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"

        app:layout_constraintTop_toTopOf="@id/layout2"
        app:layout_constraintBottom_toTopOf="@id/card4"
        app:layout_constraintStart_toEndOf="@id/card1"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/iot_card2"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/card2Trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internet of Things"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/edu_tas_beginner"
            android:textSize="25sp"
            />

    </androidx.cardview.widget.CardView>

    <!-- Card 3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"

        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintBottom_toTopOf="@+id/card5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blockchain_card3"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/card3Trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blockchain"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"

            android:textStyle="bold"
            android:fontFamily="@font/edu_tas_beginner"
            android:textSize="25sp"
            />

    </androidx.cardview.widget.CardView>

    <!-- Card 4 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"


        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintBottom_toTopOf="@id/card6"
        app:layout_constraintStart_toEndOf="@id/card3"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/iot_card4"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/card4Trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI &amp; ML"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"

            android:textStyle="bold"
            android:fontFamily="@font/edu_tas_beginner"
            android:textSize="25sp"
            />

    </androidx.cardview.widget.CardView>

    <!-- Card 5 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"


        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/quantum_card5"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/card5Trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantum Computing"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"

            android:textStyle="bold"
            android:fontFamily="@font/edu_tas_beginner"
            android:textSize="25sp"
            />
    </androidx.cardview.widget.CardView>


    <!-- Card 6 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card5"
        app:layout_constraintTop_toBottomOf="@id/card4"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/edge_card6"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/card6Trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edge Computing"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"

            android:textStyle="bold"
            android:fontFamily="@font/edu_tas_beginner"
            android:textSize="25sp"
            />
    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
