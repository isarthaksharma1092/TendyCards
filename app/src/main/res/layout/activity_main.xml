<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/WelcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi Peeps "
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:textStyle="bold|italic"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/contentMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myContentMSG"
        android:fontFamily="casual"
        android:textStyle="italic|normal"
        android:textSize="20sp"
        android:padding="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/editMsg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="45dp"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/contentMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/letsGo"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/letsGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonText"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>